<%= form_for([@director, @movie], html: { multipart: true }) do |f| %>
  <div class="field">
    <%= f.label "Title" %><br>
    <%= f.text_field :title %>
  </div><br>


  <div class="field">
    <div class="add_genre">
    <%= f.label "Add a New Genre:" %>
    <%= f.fields_for :formats, @movie.formats.create do |genre_fields| %>
      <%= genre_fields.text_field :name, {placeholder: "action, fantasy, drama, etc."} %>
   <% end %>
 </div>
<!-- checkbox for exisiting format if format.checked? -->
  <div class="show_collection">
    <%= f.collection_check_boxes :genre_id, Genre.all, :id, :name do |g| %>
    <div class="collection_check_box">
      <%= g.check_box %>
      <%= g.label %>
    </div> 
    <% end %>
  </div>
</div>

 <div class="field">
    <%= f.label "Rating (5 being best):" %>
    <%= f.select :rating, (1..5) %>
  </div>

  <div class="field">
    <%= f.label "Comments:" %><br>
    <%= f.text_area :comments, size: "24x6" %>
  </div>

  <div class="field">
    <%= f.label "Have you watched this movie?"%>
    <%= f.radio_button :user_watched, "Yes" %> Yes <%= f.radio_button :user_watched, "No" %> No
  </div>

   <%= f.submit class: 'btn btn-success' %>

   <% end %>


   