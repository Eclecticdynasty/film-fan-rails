<h1>Add a Movie and Genre</h1>


<%= form_for @genre, html: { multipart: true } do |f| %>
  <%= f.label :name, 'New Genre Name:' %><br>
  <%= f.text_field :name %>
  <br>
  <br>
  <strong>Your New Movie:</strong>
  <br>
  <br>
  <%= f.fields_for :movies, @genre.movies.build do |m| %>
      
      <%= m.label :title, "Title:"%><br>
      <%= m.text_field :title %><br>
      <br>
      <%= m.label :director, "Director:"%><br>
      <%= m.text_field :director %><br>
      <br>
      <%= m.label :year, "Year:"%><br>
      <%= m.text_field :year%><br>
      <br>
      <%= m.label :description, "Write a short Movie summary:"%><br>
      <%= m.text_area :description%><br>
      <br>
      <%= m.hidden_field :user_id, :value => current_user.id %>
      
  <%= f.submit "Add Genre and Movie!" %>
  <% end %>
<% end %>