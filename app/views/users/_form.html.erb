<%= form_for @user do |f| %>
  <%= f.label :username, "Username" %><br>
  <%= f.text_field :name %><br><br>
  <%= f.label :email, "Email" %><br>
  <%= f.text_field :email %><br><br>
  <%= f.label :password, "Password (min. 8 characters)" %><br>
  <%= f.text_field :password %><br><br>
  <%= f.submit "Create my account" %>
<% end %>

