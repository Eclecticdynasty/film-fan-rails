<ol>
    <p><%@comments.each do |comment|%></p>
       <li><strong>Comment by <%=comment.user.username%></strong></li><br>
       <%= comment.body %>
       <br>
       <br>
       <% if comment.user_id == current_user.id %>
       <%= link_to 'Delete Comment', movie_comment_path(@movie, comment), method: :delete %><br>
       <% end %>
       <br>
    <% end %>
</ol>